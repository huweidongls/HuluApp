<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E1E1"
    tools:context="com.jingna.hulu.huluapp.activity.EventContentActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="事件详情"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/activity_event_content_rl_back"
            style="@style/rl_return">
            
            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/activity_event_content_rl_append"
            android:layout_alignParentRight="true"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="34px"
                android:textColor="@color/black_333333"
                android:text="补充"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_marginRight="24px"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:layout_marginLeft="24px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="113px">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="32px"
                        android:text="事件标题："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/activity_event_content_tv_title"
                        android:layout_gravity="center_vertical"
                        android:textSize="30px"
                        android:textColor="@color/black_333333"
                        android:text="事件标题标题标题标题标题标题标题"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>

                <LinearLayout
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="113px">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="32px"
                        android:text="事件分类："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/activity_event_content_tv_type"
                        android:layout_gravity="center_vertical"
                        android:textSize="30px"
                        android:textColor="@color/black_333333"
                        android:text="分类分类分类"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>

                <LinearLayout
                    android:layout_marginBottom="30px"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black_333333"
                        android:textSize="32px"
                        android:text="事件内容："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/activity_event_content_tv_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="30px"
                        android:textColor="@color/black_333333"
                        android:text="事件内容，内容不超过200字，事件详情不可修改，只能补充，查看处理情况。"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>

                <RelativeLayout
                    android:layout_marginBottom="40px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="40px"
                        android:id="@+id/tv3"
                        android:textColor="@color/black_333333"
                        android:textSize="32px"
                        android:text="录音："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="40px"
                        android:layout_toRightOf="@+id/tv3"
                        android:id="@+id/em_lv_recodeList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="#0000"/>

                </RelativeLayout>

                <View
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>

                <LinearLayout
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="113px">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_333333"
                        android:textSize="32px"
                        android:text="事件位置："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/activity_event_content_tv_location"
                        android:layout_gravity="center_vertical"
                        android:textSize="30px"
                        android:textColor="@color/black_333333"
                        android:text="自动获取用户当前位置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="2px"/>

                <LinearLayout
                    android:layout_marginRight="20px"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="34px"
                        android:layout_marginBottom="24px"
                        android:textColor="@color/black_333333"
                        android:textSize="32px"
                        android:text="照片："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_event_content_rv_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30px"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/rectangle"
                        android:layout_width="8px"
                        android:layout_height="40px" />

                    <TextView
                        android:textSize="30px"
                        android:textColor="@color/black_333333"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12px"
                        android:text="补充内容"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="30px"
                    android:id="@+id/activity_event_content_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30px"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/rectangle"
                        android:layout_width="8px"
                        android:layout_height="40px" />

                    <TextView
                        android:layout_marginLeft="12px"
                        android:textColor="@color/black_333333"
                        android:textSize="30px"
                        android:text="处理情况"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30px"
                    android:background="@drawable/bg_change_pwd"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="34px"
                        android:layout_marginLeft="20px"
                        android:textSize="32px"
                        android:textColor="@color/black_333333"
                        android:text="处理内容："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="36px"
                        android:layout_marginTop="36px"
                        android:textColor="@color/black_333333"
                        android:textSize="30px"
                        android:text="处理内容是后台编辑，事件详情不可修改，只能补充，查看处理情况，处理情况处理情况。"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
