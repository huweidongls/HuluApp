<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_leader_name"
            android:layout_marginLeft="20px"
            android:layout_marginTop="34px"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="某某领导："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content"
            android:visibility="gone"
            android:layout_marginRight="40px"
            android:layout_marginTop="36px"
            android:textColor="@color/black_333333"
            android:textSize="30px"
            android:text="查看该事件时未处理，领导可添加处置建议，可多位领导提出建议，可文字或语音，并根据时间倒序展示。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:gravity="center_vertical">
            <!--头像-->
            <!--<ImageView-->
            <!--android:id="@+id/iea_headImg"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/meinv"/>-->
            <!--录音框-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8px">
                    <!--语音条-->
                    <ImageView
                        android:id="@+id/iea_iv_voiceLine"
                        android:layout_width="180px"
                        android:layout_height="100px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/selector_voice_line"
                        android:clickable="true"
                        android:focusable="true"
                        android:lineSpacingExtra="4px"
                        android:maxWidth="440px"
                        android:minWidth="180px"
                        android:paddingLeft="48px"
                        android:paddingRight="24px" />
                    <!--信号栏-->
                    <LinearLayout
                        android:id="@+id/iea_ll_singer"
                        android:layout_width="26px"
                        android:layout_height="26px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:background="@drawable/anim_yuyin_sign"
                        android:orientation="horizontal" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/iea_tv_voicetime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16px"
                    android:text="60 ''"
                    android:textColor="#686666"
                    android:textSize="32px" />

                <ImageView
                    android:id="@+id/iea_iv_red"
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8px"
                    android:src="@drawable/yuyin_tixing_red"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_marginRight="40px"
        android:layout_gravity="right"
        android:layout_marginTop="20px"
        android:text="8月28日 10:14:11"
        android:textSize="24px"
        android:textColor="#6E6E6E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="34px"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

</LinearLayout>
