<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jingna.hulu.huluapp.activity.EventListActivity">

    <RelativeLayout style="@style/rl_top_bar">

        <TextView
            style="@style/tv_top_title"
            android:text="事件列表" />

        <RelativeLayout
            android:id="@+id/activity_event_list_rl_back"
            style="@style/rl_return">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_event_list_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_event_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E1E1E1" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
