<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="30px"
    android:layout_marginRight="20px"
    android:layout_marginLeft="20px"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:elevation="4px"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="34px"
        android:textStyle="bold"
        android:textSize="34px"
        android:textColor="@color/black_333333"
        android:text="标题标题标题标题标题标题标题标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_lmtitle"
        android:layout_marginTop="24px"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        android:textColor="@color/black_333333"
        android:textSize="30px"
        android:text="巡检线路：线路名称名称名称名称名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="24px"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:textSize="30px"
            android:textColor="@color/black_333333"
            android:text="护路员：张四"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_marginLeft="50px"
            android:textSize="30px"
            android:textColor="@color/black_333333"
            android:text="联系电话：12345678901"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24px"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/location"
            android:layout_width="21px"
            android:layout_height="30px" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_gravity="center_vertical"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:text="上报事件时的位置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:textColor="#6E6E6E"
        android:textSize="26px"
        android:layout_marginBottom="34px"
        android:layout_gravity="right"
        android:layout_marginTop="24px"
        android:layout_marginRight="24px"
        android:layout_marginLeft="24px"
        android:text="2018年8月28日 09：00：00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
