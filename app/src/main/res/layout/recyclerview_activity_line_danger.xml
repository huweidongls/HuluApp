<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_marginTop="30px"
    android:layout_marginLeft="24px"
    android:layout_marginRight="24px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/tv_danger_type"
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="36px"
            android:textColor="@color/black_333333"
            android:text="标题标题标题标题标题标题标题标题…"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:text="未处理"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_danger_type"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv3"
            android:textSize="30px"
            android:textColor="@color/black_333333"
            android:textStyle="bold"
            android:text="隐患分类："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_danger_typename"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv3"
            android:text="未处理"
            android:textColor="@color/black_333333"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:textSize="30px"
            android:textColor="@color/black_333333"
            android:textStyle="bold"
            android:text="隐患位置："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_danger_location"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv1"
            android:text="线路隐患位置位置位置位置位置位置 位置"
            android:textColor="@color/black_333333"
            android:textSize="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv2"
            android:textSize="30px"
            android:textColor="@color/black_333333"
            android:textStyle="bold"
            android:text="隐患内容："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_danger_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/tv2"
            android:text="该线路存在的隐患内容内容内容，内 容内容内容内容内容内容内容内容"
            android:textColor="@color/black_333333"
            android:textSize="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_danger_time"
        android:layout_marginBottom="30px"
        android:layout_marginRight="30px"
        android:layout_gravity="end"
        android:layout_marginTop="24px"
        android:textColor="#6E6E6E"
        android:textSize="28px"
        android:text="8月28日 10:14:11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
