<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:gravity="center_vertical">
        <!--头像-->
        <!--<ImageView-->
        <!--android:id="@+id/iea_headImg"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/meinv"/>-->
        <!--录音框-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8px">
                <!--语音条-->
                <ImageView
                    android:id="@+id/iea_iv_voiceLine"
                    android:layout_width="180px"
                    android:layout_height="100px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_voice_line"
                    android:clickable="true"
                    android:focusable="true"
                    android:lineSpacingExtra="4px"
                    android:maxWidth="440px"
                    android:minWidth="180px"
                    android:paddingLeft="48px"
                    android:paddingRight="24px" />
                <!--信号栏-->
                <LinearLayout
                    android:id="@+id/iea_ll_singer"
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/anim_yuyin_sign"
                    android:orientation="horizontal" />
            </RelativeLayout>

            <TextView
                android:id="@+id/iea_tv_voicetime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16px"
                android:text="60 ''"
                android:textColor="#686666"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/iea_iv_red"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8px"
                android:src="@drawable/yuyin_tixing_red"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
