<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E1E1E1"
    tools:context="com.jingna.hulu.huluapp.activity.ChangePasswordActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="修改密码"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/activity_change_password_rl_back"
            style="@style/rl_return">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/bg_change_pwd"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="113px">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="旧密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/activity_change_password_et_old_pwd"
            android:layout_gravity="center_vertical"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_change_pwd"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="113px">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="新密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/activity_change_password_et_new_pwd"
            android:layout_gravity="center_vertical"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:hint="请输入密码（字母、数字、常见符号）"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_change_pwd"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="113px">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:textColor="@color/black_333333"
            android:textSize="32px"
            android:text="确认密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/activity_change_password_et_new_pwd_sure"
            android:layout_gravity="center_vertical"
            android:textSize="28px"
            android:textColor="@color/black_333333"
            android:hint="请输入密码（字母、数字、常见符号）"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <Button
        android:id="@+id/activity_change_password_btn_complete"
        android:background="@drawable/bg_out"
        android:layout_marginTop="100px"
        android:layout_marginRight="75px"
        android:layout_marginLeft="75px"
        android:text="提交"
        android:textColor="@color/white_ffffff"
        android:textSize="36px"
        android:layout_width="match_parent"
        android:layout_height="88px" />

</LinearLayout>
