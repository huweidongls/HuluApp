<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jingna.hulu.huluapp.activity.PersonActivity">

    <RelativeLayout
        android:id="@+id/activity_person_rl_top"
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="340px">

        <RelativeLayout
            android:id="@+id/activity_person_rl_back"
            android:layout_width="100px"
            android:layout_height="100px">

            <ImageView
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:src="@drawable/back_b"
                android:layout_width="21px"
                android:layout_height="38px" />

        </RelativeLayout>
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_person_iv_avatar"
            android:layout_marginBottom="60px"
            android:layout_marginLeft="40px"
            android:layout_alignParentBottom="true"
            android:layout_width="100px"
            android:layout_height="100px" />

        <TextView
            android:layout_marginLeft="10px"
            android:layout_marginBottom="69px"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/activity_person_iv_avatar"
            android:textColor="@color/black_333333"
            android:textSize="58px"
            android:text="用户账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/activity_person_rl_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/selector_person_bg"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <ImageView
                android:id="@+id/iv1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:src="@drawable/change_pwd"
                android:layout_width="42px"
                android:layout_height="52px" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="45px"
                android:layout_toRightOf="@+id/iv1"
                android:textColor="@color/black_333333"
                android:textSize="36px"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/selector_person_bg"
            android:id="@+id/activity_person_rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <ImageView
                android:id="@+id/iv2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:src="@drawable/feedback"
                android:layout_width="52px"
                android:layout_height="51px" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@+id/iv2"
                android:textColor="@color/black_333333"
                android:textSize="36px"
                android:text="意见反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/selector_person_bg"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <ImageView
                android:id="@+id/iv3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="43px"
                android:src="@drawable/event_list"
                android:layout_width="46px"
                android:layout_height="52px" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="43px"
                android:layout_toRightOf="@+id/iv3"
                android:textColor="@color/black_333333"
                android:textSize="36px"
                android:text="事件列表"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/selector_person_bg"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <ImageView
                android:id="@+id/iv4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:src="@drawable/version"
                android:layout_width="52px"
                android:layout_height="52px" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@+id/iv4"
                android:textColor="@color/black_333333"
                android:textSize="36px"
                android:text="当前版本"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/selector_person_bg"
            android:id="@+id/activity_person_rl_about"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <ImageView
                android:id="@+id/iv5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:src="@drawable/about"
                android:layout_width="52px"
                android:layout_height="52px" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@+id/iv5"
                android:textColor="@color/black_333333"
                android:textSize="36px"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/activity_person_btn_out"
        android:textSize="36px"
        android:textColor="@color/white_ffffff"
        android:text="退出"
        android:layout_marginRight="40px"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_out"
        android:layout_width="match_parent"
        android:layout_height="88px" />

</RelativeLayout>
