        android:layout_height="600px"/>

    <ListView
        android:divider="@null"
        android:id="@+id/lv2"
        android:layout_weight="1"
        android:layout_width="0px"
        android:layout_height="600px"/>

    <View
        android:background="@color/line"
        android:layout_width="2px"
        android:layout_height="600px"/>

    <ListView
        android:divider="@null"
        android:id="@+id/lv3"
        android:layout_weight="1"
