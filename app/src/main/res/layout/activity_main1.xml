<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jingna.hulu.huluapp.activity.Main1Activity">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="430px"/>

    <RelativeLayout
        android:layout_marginTop="68px"
        android:layout_below="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main1"
            android:layout_width="220px"
            android:layout_height="220px" />

        <ImageView
            android:layout_marginTop="120px"
            android:layout_toLeftOf="@+id/iv1"
            android:id="@+id/iv2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main2"
            android:layout_width="220px"
            android:layout_height="220px" />

        <ImageView
            android:layout_marginTop="120px"
            android:layout_toRightOf="@+id/iv1"
            android:id="@+id/iv3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main3"
            android:layout_width="220px"
            android:layout_height="220px" />

        <ImageView
            android:layout_marginTop="20px"
            android:id="@+id/iv4"
            android:layout_below="@+id/iv1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main4"
            android:layout_width="220px"
            android:layout_height="220px" />

        <ImageView
            android:layout_marginTop="20px"
            android:layout_below="@+id/iv2"
            android:layout_toLeftOf="@+id/iv1"
            android:id="@+id/iv5"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main5"
            android:layout_width="220px"
            android:layout_height="220px" />

        <ImageView
            android:layout_marginTop="20px"
            android:layout_below="@+id/iv3"
            android:layout_toRightOf="@+id/iv1"
            android:id="@+id/iv6"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main6"
            android:layout_width="220px"
            android:layout_height="220px" />

        <ImageView
            android:layout_marginTop="20px"
            android:id="@+id/iv7"
            android:layout_below="@+id/iv4"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main7"
            android:layout_width="220px"
            android:layout_height="220px" />

    </RelativeLayout>

</RelativeLayout>
