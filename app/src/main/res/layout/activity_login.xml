<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jingna.hulu.huluapp.LoginActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125px"
        android:layout_width="250px"
        android:layout_height="250px" />

    <EditText
        android:id="@+id/activity_login_et_username"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="100px"
        android:hint="请输入职工号"
        android:background="@null"
        android:textSize="28px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <View
        android:background="@color/line"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <RelativeLayout
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="93px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="textPassword"
            android:id="@+id/activity_login_et_password"
            android:layout_toLeftOf="@+id/view"
            android:layout_marginRight="20px"
            android:hint="请输入密码"
            android:background="@null"
            android:textSize="28px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/line"
            android:id="@+id/view"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/tv_forget_password"
            android:layout_width="2px"
            android:layout_height="32px"/>

        <TextView
            android:textSize="28px"
            android:id="@+id/tv_forget_password"
            android:layout_alignParentRight="true"
            android:textColor="#626262"
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_marginRight="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="32px"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    
    <Button
        android:id="@+id/activity_login_btn"
        android:textColor="@color/white_ffffff"
        android:textSize="32px"
        android:layout_marginRight="107px"
        android:layout_marginLeft="107px"
        android:background="@drawable/bg_login"
        android:layout_marginTop="120px"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="80px" />

</LinearLayout>
