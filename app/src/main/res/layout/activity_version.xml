<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jingna.hulu.huluapp.activity.VersionActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="系统版本"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:id="@+id/activity_version_rl_back"
            style="@style/rl_return">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="84px"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="32px"
            android:textColor="@color/black_333333"
            android:text="当前版本："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_version_tv_current_version"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_333333"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <Button
        android:id="@+id/activity_version_btn_check_version"
        android:layout_marginTop="170px"
        android:layout_marginRight="75px"
        android:layout_marginLeft="75px"
        android:background="@drawable/bg_out"
        android:textColor="@color/white_ffffff"
        android:textSize="36px"
        android:text="检测版本"
        android:layout_width="match_parent"
        android:layout_height="88px" />

</LinearLayout>
